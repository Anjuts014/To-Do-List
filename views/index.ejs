  <%- include("header") -%>

  <div class="box" id="heading">
    <h1><%= listTitle %></h1>
  </div>

  <div class="box">

    <% newitems.forEach(item => { %>
    <form action="/delete" method="post">
      <div class=item>
        <input type="checkbox" name="id" onchange="this.form.submit()" value="<%= item._id %>">
        <p><%= item.name %> </p>
        <input type="hidden" name="listName" value="<%=listTitle%>" />
      </div>
    </form>
    <% }) %>

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" value="" autocomplete="off" placeholder="New Item">
      <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
  </div>

  <%- include("footer") -%>
